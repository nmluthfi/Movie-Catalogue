<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.example.moviewcatalogue">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="com.android.example.moviewcatalogue.database.MovieTvShowProvider.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.android.example.moviewcatalogue.database.MovieTvShowProvider.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main_menu.settings.UserPreferenceActivity"></activity>

        <activity
            android:name=".ui.main_menu.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main_menu.detail_item.ItemDetailActivity"
            android:parentActivityName=".ui.main_menu.MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main_menu.MainActivity" />
        </activity>

        <provider
            android:name=".database.MovieTvShowProvider"
            android:authorities="com.android.example.moviewcatalogue.database"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.android.example.moviewcatalogue.database.MovieTvShowProvider.READ_DATABASE"
            android:writePermission="com.android.example.moviewcatalogue.database.MovieTvShowProvider.WRITE_DATABASE" />

        <service
            android:name=".widget.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name=".widget.ImageFavoriteWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/image_favorite_widget_info" />
        </receiver>

        <receiver
            android:name=".receivers.DailyReminderReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <receiver android:name=".receivers.ReleaseTodayReminderReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>

    </application>

</manifest>